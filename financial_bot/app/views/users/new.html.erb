<% provide(:title, 'Sign up') %>
<div class="text-center container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Membership</h1>
          <p>Sign up for the Pro membership for only 20$ and have access to quality financial advice forever </p>
        <% else %>
          <h1>Free Membership</h1>
          <p>Sign up for free and try out financial chat bot.</p>
        <% end %>
      </div>
        <div class="well form-format">
          <h2>Sign up</h2>
          <% if params[:plan] == '2' %>
            <%= render "pro_form" %>
          <% else %>
            <%= render "free_form" %>
          <% end %>
        </div>
      </div>
    </div>
  </div> <!-- End of row -->
</div>
